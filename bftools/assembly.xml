<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>bftools</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>bftools-${project.version}/jar</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>scripts</directory>
      <outputDirectory>bftools-${project.version}/</outputDirectory>
      <includes>
        <include>bf.sh</include>
        <include>bfconvert</include>
        <include>domainlist</include>
        <include>formatlist</include>
        <include>ijview</include>
        <include>mkfake</include>
        <include>showinf</include>
        <include>tiffcomment</include>
        <include>xmlindent</include>
        <include>xmlvalid</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>scripts</directory>
      <outputDirectory>bftools-${project.version}/</outputDirectory>
      <includes>
        <include>bf.bat</include>
        <include>bfconvert.bat</include>
        <include>config.bat</include>
        <include>config.sh</include>
        <include>domainlist.bat</include>
        <include>formatlist.bat</include>
        <include>ijview.bat</include>
        <include>logback.xml</include>
        <include>mkfake.bat</include>
        <include>showinf.bat</include>
        <include>tiffcomment.bat</include>
        <include>xmlindent.bat</include>
        <include>xmlvalid.bat</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>NEWS</source>
      <outputDirectory>bftools-${project.version}/</outputDirectory>
      <destName>NEWS</destName>
      <filtered>true</filtered>
    </file>
  </files>
</assembly>
